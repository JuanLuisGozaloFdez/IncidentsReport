<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/list_item_incident_solved_checked_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/list_item_incident_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_incident_solved_checked_box"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Incident Title"/>
    <TextView
        android:id="@+id/list_item_incident_details_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_incident_solved_checked_box"
        android:layout_below="@id/list_item_incident_title_text_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Incident Title"/>
    <TextView
        android:id="@+id/list_item_incident_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_incident_solved_checked_box"
        android:layout_below="@id/list_item_incident_details_text_view"
        android:padding="4dp"
        tools:text="Incident Date"/>
</RelativeLayout>